{
  "compilerOptions": {
    "target": "ES2016", // 编译目标（js文件）使用的ES版本
    "module": "CommonJS", // 编译目标使用的模块化标准
    "lib": ["ES2016"], // 编译目标的执行环境
    "outDir": "./dist", // 编译结果的输出目录
    "strictNullChecks": true, // 开启严格的空类型检查（默认未开启）
    "removeComments": true, // 移除编译结果中的注释
    // "noImplicitUseStrict": true, // 编译结果中不包含"use strict"指令
    // "esModuleInterop": true, // 启用es模块化交互非es模块导出
    "noEmitOnError": true, // 报错时不生成输出文件
    "moduleResolution": "node", // 设置模块解析策略（应该从什么位置寻找模块）
    "strictPropertyInitialization": true, // 开启严格的类属性初始化检查（默认未开启）
  },
  // "include": ["./src"], // 运行tsc命令时，编译src目录下的所有ts文件
  "files": ["./src/index.ts"] // 运行tsc命令时，仅编译src目录下的index.ts文件以及该文件所依赖的ts文件
}
